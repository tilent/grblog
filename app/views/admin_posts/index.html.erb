<h1>文章目录</h1>

<table>
  <tr>
    <th>标题</th>
    <th>内容</th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.title, post %></td>
    <td><%= post.content.slice(0,20) + '...' %></td>
    <td><%= link_to '编辑', edit_admin_post_path(post) %></td>
    <td><%= link_to '删除', admin_post_path(post),method: :delete,:confirm => '确定删除此文章?'%></td>
  </tr>
<% end %>
</table>

<br />

