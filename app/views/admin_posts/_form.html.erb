<% @post.tags.build %>
<%= form_for @post,:url => {:action => "create"} do |post_form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> 导致文章保存失败:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= post_form.label "作者" %><br />
    <%= post_form.text_field :name %>
  </div>
  <div class="field">
    <%= post_form.label "标题" %><br />
    <%= post_form.text_field :title %>
  </div>
  <div class="field">
    <%= post_form.label "正文" %><br />
    <%= post_form.text_area :content %>
  </div>
  <h2>标签</h2>
  <%= render :partial => 'tags/form',
             :locals => {:form => post_form} %>
  <div class="actions">
    <%= post_form.submit "提交" %>
  </div>
<% end %>
